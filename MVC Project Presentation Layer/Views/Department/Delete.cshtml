@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are U Sure?</h1>
<div  asp-validation-summary="All"> </div>

<form asp-action="Delete">

    <div class="form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <input readonly asp-for="Code" class="form-control" />
      @*   <span asp-validation-for="Code" class="text-danger"></span> *@
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input readonly asp-for="Name" class="form-control" />
      @*   <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>

    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input readonly asp-for="DateOfCreation" class="form-control" />
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-info"> Cancel</a>
</form>