@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="ModelOnly">    </div>

        <form asp-action="SignIn">
           
            <input class="text email" asp-for="Email" placeholder="Email" required="">
            <span asp-validation-for="Email" class="text-danger"></span>
            <input class="text" asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="Password" class="text-danger"></span>
            
            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="RememberMe" class="checkbox" >
                    <span>Remember Me?</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>
        <p>Don't have an Account? <a asp-action="SignUp"> Sign Up Now!</a></p>
        <p> <a asp-action="ForgetPassword"> Do you forget your password?!</a></p>
    </div>
</div>

@section ValidationScriptsSection
{
    <partial name="_ValidationScriptsPartial" />
}

