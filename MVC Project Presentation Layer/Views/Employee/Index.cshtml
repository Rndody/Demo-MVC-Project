@model IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employees";
    ///ViewData & ViewBag
    /// string viewDataMessage = ViewData["Message"] as string;
    /// string viewBagMessage = ViewBag.Message;
}

@* <div class=" alert alert-warning">  @ViewData["Message"]       </div> *@

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-primary">   @TempData["Message"]  </div>
}
@* don't show the box that the TempData["Message"] will appear on if the TempData["Message"] is null or empty' *@

<h1 class="p-3 mb-3 "> All Employees</h1>

@if (Model.Count() > 0)
{

    <a asp-action="Create" asp-controller="Employee" class=" btn btn-success">Create new Employee</a>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>

                <td>@Html.DisplayNameFor(E => E.Name) </td>
                <td>@Html.DisplayNameFor(E => E.Age) </td>
                <td>@Html.DisplayNameFor(E => E.Salary) </td>
                <td>@Html.DisplayNameFor(E => E.IsActive) </td>
                @* <td>@Html.DisplayNameFor(E => E.PhoneNumber) </td> *@
                <td>@Html.DisplayNameFor(E => E.Gender) </td>
                @* <td>@Html.DisplayNameFor(E => E.EmployeeType) </td> *@
                @* <td>@Html.DisplayNameFor(E => E.HireDate) </td> *@
                <td>@Html.DisplayNameFor(E => E.Email) </td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => employee.Name) </td>
                    <td>@Html.DisplayFor(M => employee.Age) </td>
                    <td>@Html.DisplayFor(M => employee.Salary) </td>
                    <td>@Html.DisplayFor(M => employee.IsActive) </td>
                    <td>@Html.DisplayFor(M => employee.Gender) </td>
                    <td>@Html.DisplayFor(M => @employee.Email) </td>


                    <partial name="_ButtonsPartial" model="@employee.Id" />

                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning ">
        <h3>  Zero Employees </h3>
    </div>

}




