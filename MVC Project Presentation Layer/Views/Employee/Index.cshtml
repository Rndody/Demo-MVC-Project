<h1 class="p-3 mb-3 "> All Employees </h1>

<div class=" row justify-content-center align-items-center mt-2"> 
    <form  asp-action="Index"  class="row col-lg-8 offset-2">
        <div class="col-8">
            <input type="text" id="searchInput" name="searchInput" placeholder="Search For Employee by Name" class="form-control" />
        </div >
        <div class="col-4">
            <input type="submit" class=" btn btn-outline-success" value="Search" />
        </div>

        </form>
</div>


@if (Model.Count() > 0)
{

    <a asp-action="Create" asp-controller="Employee" class=" btn btn-success">Create new Employee</a>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th> Image </th> 
                <th>@Html.DisplayNameFor(E => E.Name) </th>
                <th>@Html.DisplayNameFor(E => E.Age) </th>
                <th>@Html.DisplayNameFor(E => E.Address) </th>
                <th>@Html.DisplayNameFor(E => E.Department) </th>
                <th>@Html.DisplayNameFor(E => E.Salary) </th>
                <th>@Html.DisplayNameFor(E => E.IsActive) </th>
                @* <td>@Html.DisplayNameFor(E => E.PhoneNumber) </td> *@
                <th>@Html.DisplayNameFor(E => E.Gender) </th>
                @* <td>@Html.DisplayNameFor(E => E.EmployeeType) </td> *@
                @* <td>@Html.DisplayNameFor(E => E.HireDate) </td> *@
                <th>@Html.DisplayNameFor(E => E.Email) </th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@employee.ImageName" class="rounded-pill" width="70" alt="Employee Image" />
                    </td>
                    <td>@Html.DisplayFor(M => employee.Name) </td>
                    <td>@Html.DisplayFor(M => employee.Age) </td>
                    <td>@Html.DisplayFor(M => employee.Address) </td>
                    <td>@Html.DisplayFor(M => employee.Department.Name) </td>
                    <td>@Html.DisplayFor(M => employee.Salary) </td>
                    <td>@Html.DisplayFor(M => employee.IsActive) </td>
                    <td>@Html.DisplayFor(M => employee.Gender) </td>
                    <td>@Html.DisplayFor(M => @employee.Email) </td>


                    <partial name="_ButtonsPartial" model="@employee.Id" />

                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning ">
        <h3>  Zero Employees </h3>
    </div>

}




