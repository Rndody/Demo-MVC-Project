@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Employee</h1>
<br />
<br />
<div asp-validation-summary="All">
</div>
<form asp-action="Edit">

    <partial name="PartialViews/CreateEditEmployeePartial" />

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-info ">Cancel</a>
</form>

@section ValidationScriptsSection
{
