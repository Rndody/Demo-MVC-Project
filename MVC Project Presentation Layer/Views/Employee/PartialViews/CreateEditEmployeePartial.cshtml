@model EmployeeViewModel
@* @inject IDepartmentRepository departmentsRepository *@
@inject IUnitOfWork unitOfWork

@{
    var departments = new SelectList(unitOfWork.Repository<Department>().GetAll(), nameof(Department.Id), nameof(Department.Name));
}
<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Address" class="col-form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="HireDate" class="col-form-label"></label>
    <input asp-for="HireDate" class="form-control" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Gender" class="col-form-label"></label>
    <input asp-for="Gender" class="form-control" />
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
<div class="form-group">
    <input asp-for="IsActive" class="form-check-input" />
    <label asp-for="IsActive" class="col-form-label"></label>
</div>
<div class="form-group">
    <label asp-for="HireDate" class="col-form-label"></label>
    <input asp-for="HireDate" class="form-control" />
</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="Department">   </label>
    <select class="form-control" asp-for="DepartmentId"  asp-items="@departments">
        @* get the departments from the department repositry
        asp-items takes object from type SelectList and the data we get is of type IEnumerable
        so we created variable of type SelectList and added the IEnumerable<Department> object in it
        then send that variable to the asp-items
        *@
        <option value="@null">  -- Select Department  -- </option>
    </select>
</div>




